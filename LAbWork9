@startuml

class Сотрудник {
  + id (PK)
  + фамилия
  + имя
  + должность
  + логин
  + дата_рождения
}

class Пользователь {
  + id (PK)
  + фио
  + дата_рождения
  + телефон
}

class Товар {
  + id (PK)
  + название
  + крепость
  + цена
  + количество
  + номер товара
}

class Покупка_товара {
  + id (PK)
  + сотрудник
  + пользователь
  + дата_продажи
  + товар
}

class Категория {
  + id (PK)
  + название
  + акцизная_ставка
}

Сотрудник "1" -- "n" Покупка_товара : оформляет
Пользователь "1" -- "n" Покупка_товара : совершает
Товар "n" -- "m" Покупка_товара : входит в
Товар "n" -- "1" Категория : относится к

@enduml
