@startuml
left to right direction
class Пользователь {
 -id пользователя: integer
 -номер телефона: integer
 -имя: string
 -фамилия: string
 -дата рождения: Date
 +init()
 +{static} добавить_данные_пользователя()
 +{static} изменить_данные_пользователя()
 +{static} просмотр_данных_пользователя()
 +{static} удалить_данные_пользователя()
}
class Покупка_товара{
-id операции: integer
-id сотрудника: Сотрудники
-id пользователя: Пользователи
-Товар: string
-Дата операции: Date
 +init()
 +{static} заказать товар()
 +{static} зарезервировать товар()
 +{static} просмотр товара()
}
class Вид{
 +{static} измененить_пользователя
