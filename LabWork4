}
class Товары {
 -id товара: integer
 -название товара: string
 -номер товара: integer
 -дата добавления товара: date
 -количество товара: integer
 +init()
 +{static} добавить_товар()
 +{static} просмотр_товара()
 +{static} измененить_товар()
 +{static} удалить_товар()
}
