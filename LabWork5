@startuml
actor Администратор
actor Сотрудник
control Контроллер
boundary Вид
entity Пользователь
entity Сотрудники
entity Товары
entity Покупка_товара
database "База данных"

autonumber

' Сценарий сотрудника: работа с пользователями
Сотрудник -> Контроллер: запуск()
Контроллер -> Вид: показать_меню()
Сотрудник <-- Вид: вывод меню

Сотрудник -> Вид: выбор "показать пользователей"
Контроллер -> Вид: получить_данные()
Контроллер -> Пользователь: показать_данные_пользователей()
Пользователь -> "База данных": SELECT * FROM users
Пользователь --> Контроллер: данные пользователей
Контроллер -> Вид: показать_пользователей()
Сотрудник <-- Вид: вывод пользователей

Сотрудник -> Вид: выбор "изменить пользователя"
Контроллер -> Вид: получить_данные()
Контроллер -> Пользователь: изменить_данные_пользователя()
Пользователь -> "База данных": UPDATE users SET ...
Пользователь --> Контроллер: подтверждение
Контроллер -> Вид: показать_результат()
Сотрудник <-- Вид: результат операции

' Сценарий сотрудника: работа с товарами
Сотрудник -> Вид: выбор "показать товары"
Контроллер -> Товары: показать_данные_товаров()
Товары -> "База данных": SELECT * FROM products
Товары --> Контроллер: данные товаров
Контроллер -> Вид: показать_товары()
Сотрудник <-- Вид: вывод товаров

Сотрудник -> Вид: выбор "добавить товар"
Контроллер -> Вид: получить_данные_товара()
Контроллер -> Товары: добавить_данные_товара()
Товары -> "База данных": INSERT INTO products...
Товары --> Контроллер: подтверждение
Контроллер -> Вид: показать_результат()
Сотрудник <-- Вид: результат операции

' Сценарий администратора: работа с сотрудниками
Администратор -> Контроллер: запуск()
Контроллер -> Вид: показать_меню()
Администратор <-- Вид: вывод меню

Администратор -> Вид: выбор "показать сотрудников"
Контроллер -> Сотрудники: показать_данные_сотрудников()
Сотрудники -> "База данных": SELECT * FROM employees
Сотрудники --> Контроллер: данные сотрудников
Контроллер -> Вид: показать_сотрудников()
Администратор <-- Вид: вывод сотрудников

Администратор -> Вид: выбор "изменить сотрудника"
Контроллер -> Вид: получить_данные()
Контроллер -> Сотрудники: изменить_данные_сотрудника()
Сотрудники -> "База данных": UPDATE employees SET...
Сотрудники --> Контроллер: подтверждение
Контроллер -> Вид: показать_результат()
Администратор <-- Вид: результат операции
@enduml
